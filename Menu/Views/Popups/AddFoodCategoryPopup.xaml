<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Menu.Views.Popups.AddFoodCategoryPopup">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Frame>
            <StackLayout Margin="20">
                <Label Text="类别" FontSize="20" FontAttributes="Bold" Margin="10,10,10,20" HorizontalOptions="Center" />
                <Entry x:Name="CategoryNameEntry" Placeholder="类别名称" />
                <Entry x:Name="NumberOfItemsEntry" Placeholder="食物数量" Keyboard="Numeric" />
                <StackLayout Orientation="Horizontal">
                    <Button x:Name="AcceptButton" Text="确定" />
                    <Button x:Name="CancelButton" Text="取消" />
                </StackLayout>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentView>
